---
import PortableText from "@/components/sanity/PortableText.astro";
import TableOfContents from "@/components/TableOfContents.astro";
import TocDrawer from "@/components/TocDrawer.tsx";
import BackLink from "@/components/BackLink.astro";
import Layout from "@/layouts/Layout.astro";
import { slugify, textToPortableTextBlock } from "@/lib/utils";
import { formatDateLong } from "@/utils/date";
import type { SanityDocument } from "@sanity/client";
import {
  createImageUrlBuilder,
  type SanityImageSource,
} from "@sanity/image-url";
import { sanityClient } from "sanity:client";

const POST_QUERY = `*[_type == "post" && slug.current == $slug][0]{
  ...,
  tags[]->{name, slug}
}`;
const post = await sanityClient.fetch<SanityDocument>(POST_QUERY, Astro.params);

let bodyWithDescription = Array.isArray(post.body) ? [...post.body] : [];
if (post.description && typeof post.description === "string") {
  const descriptionBlock = textToPortableTextBlock(post.description);
  bodyWithDescription = [descriptionBlock, ...bodyWithDescription];
}

export async function getStaticPaths(): Promise<{ params: { slug: string } }> {
  const SLUGS_QUERY = `*[_type == "post" && defined(slug.current)]{
    "params": {"slug": slug.current}
  }`;
  return await sanityClient.fetch(SLUGS_QUERY, Astro.params);
}

const { projectId, dataset } = sanityClient.config();
const urlFor = (source: SanityImageSource) =>
  projectId && dataset
    ? createImageUrlBuilder({ projectId, dataset }).image(source)
    : null;
const postImageUrl = post.headerImage
  ? urlFor(post.headerImage)?.width(1100).height(620).url()
  : null;
const postOgImageUrl = post.ogImage
  ? urlFor(post.ogImage)?.width(1200).height(630).url()
  : undefined;

interface HeadingBlock {
  _type: string;
  style: string;
  children: Array<{ text?: string }>;
}
const headings = (post.body ?? [])
  .filter(
    (b: HeadingBlock) =>
      b._type === "block" && ["h2", "h3", "h4"].includes(b.style),
  )
  .map((b: HeadingBlock) => {
    const text = b.children.map((c) => c.text ?? "").join("");
    return {
      id: slugify(text),
      text,
      level: parseInt(b.style.replace("h", ""), 10),
    };
  });
---

<Layout
  title={post.title}
  description={post.description}
  ogImage={postOgImageUrl}
>
  <!-- Reading progress bar -->
  <div class="reading-progress" aria-hidden="true"></div>

  <!-- Desktop: back link in left gutter -->
  <div slot="left" class="sticky top-8">
    <BackLink href="/writing" label="Writing" />
  </div>

  <!-- Desktop: ToC in right gutter -->
  <TableOfContents slot="right" headings={headings} />

  <!-- Article header — editorial, typography-first -->
  <header class="relative">
    <!-- Ambient glow — barely-there in light, invisible in dark -->
    <div
      class="pointer-events-none absolute -top-24 -left-24 size-[36rem] rounded-full blur-3xl -z-10"
      style="background: radial-gradient(circle, oklch(0.72 0.18 285 / 0.07), transparent 65%);"
      aria-hidden="true"
    ></div>

    <!-- Breadcrumb + rule -->
    <div class="hero-animate mb-8 flex items-center gap-4">
      <a
        href="/writing"
        class="no-underline small-heading text-foreground-muted transition-colors hover:text-rf-accent shrink-0 lg:hidden"
      >← Writing</a>
      <span class="small-heading text-rf-accent hidden lg:block shrink-0">Writing</span>
      <div class="h-px flex-1 bg-border"></div>
    </div>

    <!-- Title -->
    <h1
      class="hero-animate hero-delay-1 font-serif italic text-foreground"
      style="font-size: clamp(2.5rem, 6.5vw, 5rem); line-height: 0.93;"
    >
      {post.title}
    </h1>

    <!-- Meta -->
    <div class="hero-animate hero-delay-2 mt-6 flex flex-wrap items-center gap-x-6 gap-y-2">
      {
        post.publishedAt && !post.updatedAt && (
          <span class="font-mono-custom text-foreground-muted">
            {formatDateLong(post.publishedAt)}
          </span>
        )
      }
      {
        post.updatedAt && (
          <div class="flex flex-wrap gap-x-4 gap-y-1">
            <span class="font-mono-custom text-foreground-muted">
              {formatDateLong(post.publishedAt)}
            </span>
            <span class="font-mono-custom rounded-sm bg-amber-400/15 px-1.5 text-amber-700 dark:bg-amber-400/20 dark:text-amber-300">
              Updated: {formatDateLong(post.updatedAt)}
            </span>
          </div>
        )
      }
      {
        post.tags?.map((tag: { name: string }) => (
          <span class="rounded-full bg-rf-accent/10 px-2.5 py-0.5 text-xs font-medium text-rf-accent">
            {tag.name}
          </span>
        ))
      }
    </div>
  </header>

  <!-- Header image -->
  {
    postImageUrl && (
      <div class="overflow-hidden rounded-2xl border border-border">
        <img
          src={postImageUrl}
          alt={post.title}
          width="1100"
          height="620"
          class="w-full object-cover"
        />
      </div>
    )
  }

  <!-- Prose body -->
  <main class="prose min-w-0 prose-neutral dark:prose-invert">
    {
      bodyWithDescription.length > 0 && (
        <PortableText portableText={bodyWithDescription} />
      )
    }
  </main>

  <TocDrawer headings={headings} client:load />
</Layout>
