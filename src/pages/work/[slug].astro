---
import Link from "@/components/Link.astro";
import PortableText from "@/components/sanity/PortableText.astro";
import TableOfContents from "@/components/TableOfContents.astro";
import TocDrawer from "@/components/TocDrawer.tsx";
import Tag from "@/components/Tag.astro";
import Layout from "@/layouts/Layout.astro";
import { slugify, textToPortableTextBlock } from "@/lib/utils";
import { formatDateLong } from "@/utils/date";
import type { SanityDocument } from "@sanity/client";
import {
  createImageUrlBuilder,
  type SanityImageSource,
} from "@sanity/image-url";
import { sanityClient } from "sanity:client";

const PROJECT_QUERY = `*[_type == "project" && slug.current == $slug][0]{
  ...,
  tags[]->{name, slug}
}`;
const project = await sanityClient.fetch<SanityDocument>(
  PROJECT_QUERY,
  Astro.params,
);

// Prepend description as first paragraph in body
let bodyWithDescription = Array.isArray(project.body) ? [...project.body] : [];
if (project.description && typeof project.description === "string") {
  const descriptionBlock = textToPortableTextBlock(project.description);
  bodyWithDescription = [descriptionBlock, ...bodyWithDescription];
}

export async function getStaticPaths(): Promise<{ params: { slug: string } }> {
  const SLUGS_QUERY = `*[_type == "project" && defined(slug.current)]{
    "params": {"slug": slug.current}
  }`;
  return await sanityClient.fetch(SLUGS_QUERY, Astro.params);
}

const { projectId, dataset } = sanityClient.config();
const urlFor = (source: SanityImageSource) =>
  projectId && dataset
    ? createImageUrlBuilder({ projectId, dataset }).image(source)
    : null;
const projectImageUrl = project.headerImage
  ? urlFor(project.headerImage)?.width(550).height(310).url()
  : null;
const projectOgImageUrl = project.ogImage
  ? urlFor(project.ogImage)?.width(1200).height(630).url()
  : undefined;

// Extract headings for ToC
interface HeadingBlock {
  _type: string;
  style: string;
  children: Array<{ text?: string }>;
}
const headings = (project.body ?? [])
  .filter(
    (b: HeadingBlock) =>
      b._type === "block" && ["h2", "h3", "h4"].includes(b.style),
  )
  .map((b: HeadingBlock) => {
    const text = b.children.map((c) => c.text ?? "").join("");
    return {
      id: slugify(text),
      text,
      level: parseInt(b.style.replace("h", ""), 10),
    };
  });
---

<Layout
  title={project.title}
  description={project.description}
  ogImage={projectOgImageUrl}
  maxWidth="full"
>
  <div class="grid grid-cols-1 xl:grid-cols-[12rem_1fr_12rem] gap-8">
    <!-- Left: Back link (desktop) -->
    <aside class="hidden xl:block">
      <div class="sticky top-8">
        <Link href="/work">← Back to work</Link>
      </div>
    </aside>

    <!-- Center: Article -->
    <main class="prose prose-neutral dark:prose-invert min-w-0">
      <!-- Mobile back link -->
      <Link href="/work" class="xl:hidden not-prose inline-block mb-6"
        >← Back to work</Link
      >
      {projectImageUrl && <img src={projectImageUrl} alt={project.title} />}
      <header>
        <h1 class="mb-2">{project.title}</h1>
        {
          project.publishedAt && !project.updatedAt && (
            <span class="font-mono-custom font-medium">
              {formatDateLong(project.publishedAt)}
            </span>
          )
        }
        {
          project.updatedAt && (
            <div class="flex flex-col gap-y-1">
              <span class="font-mono-custom font-medium">
                Originally published: {formatDateLong(project.publishedAt)}
              </span>
              <span class="font-mono-custom w-fit bg-amber-400/50 font-medium text-foreground">
                Updated: {formatDateLong(project.updatedAt)}
              </span>
            </div>
          )
        }
        <div class="mt-4 flex flex-col gap-4">
          {
            Array.isArray(project.techStack) &&
              project.techStack.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {project.techStack.map((tech) => (
                    <Tag label={tech} />
                  ))}
                </div>
              )
          }
          {
            (project.projectUrl || project.githubUrl) && (
              <div class="flex flex-wrap gap-4">
                {project.projectUrl && (
                  <a
                    href={project.projectUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm"
                  >
                    Live Site
                  </a>
                )}
                {project.githubUrl && (
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-sm"
                  >
                    GitHub
                  </a>
                )}
              </div>
            )
          }
        </div>
      </header>
      {
        bodyWithDescription.length > 0 && (
          <PortableText portableText={bodyWithDescription} />
        )
      }
      <!-- {
        Array.isArray(project.tags) && project.tags.length > 0 && (
          <div class="mt-8 flex flex-wrap gap-2">
            {project.tags.map((tag) => (
              <Tag label={tag.name} />
            ))}
          </div>
        )
      } -->
    </main>

    <!-- Right: ToC (desktop) -->
    <aside class="hidden xl:block">
      <TableOfContents headings={headings} />
    </aside>
  </div>

  <!-- Mobile ToC drawer -->
  <TocDrawer headings={headings} client:load />
</Layout>
