---
import BackLink from "@/components/BackLink.astro";
import PortableText from "@/components/sanity/PortableText.astro";
import TableOfContents from "@/components/TableOfContents.astro";
import TocDrawer from "@/components/TocDrawer.tsx";
import Layout from "@/layouts/Layout.astro";
import { slugify, textToPortableTextBlock } from "@/lib/utils";
import { formatDateLong } from "@/utils/date";
import type { SanityDocument } from "@sanity/client";
import {
  createImageUrlBuilder,
  type SanityImageSource,
} from "@sanity/image-url";
import { sanityClient } from "sanity:client";

const PROJECT_QUERY = `*[_type == "project" && slug.current == $slug][0]{
  ...,
  tags[]->{name, slug}
}`;
const project = await sanityClient.fetch<SanityDocument>(
  PROJECT_QUERY,
  Astro.params,
);

// Prepend description as first paragraph in body
let bodyWithDescription = Array.isArray(project.body) ? [...project.body] : [];
if (project.description && typeof project.description === "string") {
  const descriptionBlock = textToPortableTextBlock(project.description);
  bodyWithDescription = [descriptionBlock, ...bodyWithDescription];
}

export async function getStaticPaths(): Promise<{ params: { slug: string } }> {
  const SLUGS_QUERY = `*[_type == "project" && defined(slug.current)]{
    "params": {"slug": slug.current}
  }`;
  return await sanityClient.fetch(SLUGS_QUERY, Astro.params);
}

const { projectId, dataset } = sanityClient.config();
const urlFor = (source: SanityImageSource) =>
  projectId && dataset
    ? createImageUrlBuilder({ projectId, dataset }).image(source)
    : null;
const projectImageUrl = project.headerImage
  ? urlFor(project.headerImage)?.width(1100).height(620).url()
  : null;
const projectOgImageUrl = project.ogImage
  ? urlFor(project.ogImage)?.width(1200).height(630).url()
  : undefined;

// Extract headings for ToC
interface HeadingBlock {
  _type: string;
  style: string;
  children: Array<{ text?: string }>;
}
const headings = (project.body ?? [])
  .filter(
    (b: HeadingBlock) =>
      b._type === "block" && ["h2", "h3", "h4"].includes(b.style),
  )
  .map((b: HeadingBlock) => {
    const text = b.children.map((c) => c.text ?? "").join("");
    return {
      id: slugify(text),
      text,
      level: parseInt(b.style.replace("h", ""), 10),
    };
  });
---

<Layout
  title={project.title}
  description={project.description}
  ogImage={projectOgImageUrl}
>
  <!-- Reading progress bar -->
  <div class="reading-progress" aria-hidden="true"></div>

  <!-- Desktop: back link in left gutter -->
  <div slot="left" class="sticky top-8">
    <BackLink href="/work" label="Work" />
  </div>

  <!-- Desktop: ToC in right gutter -->
  <TableOfContents slot="right" headings={headings} />

  <!-- Project header — editorial, typography-first -->
  <header class="relative">
    <!-- Ambient glow -->
    <div
      class="pointer-events-none absolute -top-24 -left-24 size-[36rem] rounded-full blur-3xl -z-10"
      style="background: radial-gradient(circle, oklch(0.72 0.18 285 / 0.07), transparent 65%);"
      aria-hidden="true"
    ></div>

    <!-- Breadcrumb + rule -->
    <div class="hero-animate mb-8 flex items-center gap-4">
      <a
        href="/work"
        class="no-underline small-heading text-foreground-muted transition-colors hover:text-rf-accent shrink-0 lg:hidden"
      >← Work</a>
      <span class="small-heading text-rf-accent hidden lg:block shrink-0">Work</span>
      <div class="h-px flex-1 bg-border"></div>
    </div>

    <!-- Title -->
    <h1
      class="hero-animate hero-delay-1 font-serif italic text-foreground"
      style="font-size: clamp(2.5rem, 6.5vw, 5rem); line-height: 0.93;"
    >
      {project.title}
    </h1>

    <!-- Meta -->
    <div class="hero-animate hero-delay-2 mt-6 flex flex-wrap items-center gap-x-6 gap-y-2">
      {
        project.publishedAt && !project.updatedAt && (
          <span class="font-mono-custom text-foreground-muted">
            {formatDateLong(project.publishedAt)}
          </span>
        )
      }
      {
        project.updatedAt && (
          <div class="flex flex-wrap gap-x-4 gap-y-1">
            <span class="font-mono-custom text-foreground-muted">
              {formatDateLong(project.publishedAt)}
            </span>
            <span class="font-mono-custom rounded-sm bg-amber-400/15 px-1.5 text-amber-700 dark:bg-amber-400/20 dark:text-amber-300">
              Updated: {formatDateLong(project.updatedAt)}
            </span>
          </div>
        )
      }
      {
        project.tags?.map((tag: { name: string }) => (
          <span class="rounded-full bg-rf-accent/10 px-2.5 py-0.5 text-xs font-medium text-rf-accent">
            {tag.name}
          </span>
        ))
      }
    </div>

    <!-- Tech stack chips -->
    {
      Array.isArray(project.techStack) && project.techStack.length > 0 && (
        <div class="hero-animate hero-delay-2 mt-4 flex flex-wrap gap-2">
          {project.techStack.map((tech: string) => (
            <span class="font-mono-custom rounded-md border border-border bg-foreground/5 px-2 py-0.5 text-xs text-foreground-muted lowercase">
              {tech}
            </span>
          ))}
        </div>
      )
    }

    <!-- External links -->
    {
      (project.projectUrl || project.githubUrl) && (
        <div class="hero-animate hero-delay-3 mt-6 flex flex-wrap gap-3">
          {project.projectUrl && (
            <a
              href={project.projectUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="no-underline inline-flex items-center gap-1.5 rounded-full bg-rf-accent px-4 py-1.5 text-sm font-semibold text-white transition-opacity hover:opacity-80"
            >
              Live Site ↗
            </a>
          )}
          {project.githubUrl && (
            <a
              href={project.githubUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="no-underline inline-flex items-center gap-1.5 rounded-full border border-border px-4 py-1.5 text-sm font-medium text-foreground-muted transition-colors hover:border-foreground/30 hover:text-foreground"
            >
              GitHub ↗
            </a>
          )}
        </div>
      )
    }
  </header>

  <!-- Header image -->
  {
    projectImageUrl && (
      <div class="overflow-hidden rounded-2xl border border-border">
        <img
          src={projectImageUrl}
          alt={project.title}
          width="1100"
          height="620"
          class="w-full object-cover"
        />
      </div>
    )
  }

  <!-- Prose body -->
  <main class="prose min-w-0 prose-neutral dark:prose-invert">
    {
      bodyWithDescription.length > 0 && (
        <PortableText portableText={bodyWithDescription} />
      )
    }
  </main>

  <TocDrawer headings={headings} client:load />
</Layout>
