---
import Link from "@/components/Link.astro";
import PortableText from "@/components/sanity/PortableText.astro";
import Layout from "@/layouts/Layout.astro";
import { formatDateLong } from "@/utils/date";
import { textToPortableTextBlock } from "@/lib/utils";
import type { SanityDocument } from "@sanity/client";
import {
  createImageUrlBuilder,
  type SanityImageSource,
} from "@sanity/image-url";
import { sanityClient } from "sanity:client";

const APPEARANCE_QUERY = `*[_type == "appearance" && slug.current == $slug][0]{
  ...,
  tags[]->{name, slug}
}`;
const appearance = await sanityClient.fetch<SanityDocument>(
  APPEARANCE_QUERY,
  Astro.params,
);

// Prepend description as first paragraph in body
let bodyWithDescription = Array.isArray(appearance.body)
  ? [...appearance.body]
  : [];
if (appearance.description && typeof appearance.description === "string") {
  const descriptionBlock = textToPortableTextBlock(appearance.description);
  bodyWithDescription = [descriptionBlock, ...bodyWithDescription];
}

export async function getStaticPaths(): Promise<{ params: { slug: string } }> {
  const SLUGS_QUERY = `*[_type == "appearance" && defined(slug.current)]{
    "params": {"slug": slug.current}
  }`;
  return await sanityClient.fetch(SLUGS_QUERY, Astro.params);
}

const { projectId, dataset } = sanityClient.config();
const urlFor = (source: SanityImageSource) =>
  projectId && dataset
    ? createImageUrlBuilder({ projectId, dataset }).image(source)
    : null;
const appearanceImageUrl = appearance.headerImage
  ? urlFor(appearance.headerImage)?.width(550).height(310).url()
  : null;
const appearanceOgImageUrl = appearance.ogImage
  ? urlFor(appearance.ogImage)?.width(1200).height(630).url()
  : undefined;
---

<Layout
  title={appearance.title}
  description={appearance.description}
  ogImage={appearanceOgImageUrl}
>
  <div class="space-y-8 md:px-2">
    <Link href="/appearances" class="inline-block">Back to appearances</Link>
    <main class="prose prose-neutral dark:prose-invert">
      {
        appearanceImageUrl && (
          <img src={appearanceImageUrl} alt={appearance.title} />
        )
      }
      <header>
        <h1 class="mb-1">{appearance.title}</h1>
        {
          appearance.publishedAt && !appearance.updatedAt && (
            <span class="font-mono-custom font-medium">
              {formatDateLong(appearance.publishedAt)}
            </span>
          )
        }
        {
          appearance.updatedAt && (
            <div class="flex flex-col gap-y-1">
              <span class="font-mono-custom font-medium">
                Originally published: {formatDateLong(appearance.publishedAt)}
              </span>
              <span class="font-mono-custom w-fit bg-amber-400/50 font-medium text-foreground">
                Updated: {formatDateLong(appearance.updatedAt)}
              </span>
            </div>
          )
        }
      </header>
      {
        bodyWithDescription.length > 0 && (
          <PortableText portableText={bodyWithDescription} />
        )
      }
      <!-- {
        Array.isArray(appearance.tags) && appearance.tags.length > 0 && (
          <div class="mt-8 flex flex-wrap gap-2">
            {appearance.tags.map((tag) => (
              <Tag label={tag.name} />
            ))}
          </div>
        )
      } -->
    </main>
  </div>
</Layout>
