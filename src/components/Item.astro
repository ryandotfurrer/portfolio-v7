---
import { formatDateDotNotation } from "../utils/date";

interface Props {
  title: string;
  href: string;
  publishedAt: string;
}

const { title, href, publishedAt } = Astro.props;

const formattedDate = formatDateDotNotation(publishedAt);
---

<a
  href={href}
  class="block rounded-md border border-transparent px-2 py-1 transition-all hover:border-border hover:bg-card hover:text-foreground"
>
  <div class="flex w-full items-center justify-between gap-4">
    <div class="w-fit"><h3>{title}</h3></div>
    <div class="w-full flex-1 border-b"></div>
    <div class="number w-fit">
      <span>{formattedDate}</span>
    </div>
  </div>
</a>
