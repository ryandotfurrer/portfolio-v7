---
import { slugify } from "@/lib/utils";

interface Span {
  _type: string;
  text?: string;
}
interface Props {
  node: { children: Span[] };
}
const { node } = Astro.props;
const text = (node.children ?? []).map((c) => c.text ?? "").join("");
const id = slugify(text);
---

<h4 id={id}><slot /></h4>
