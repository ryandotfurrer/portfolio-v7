---
interface Props {
  label: string;
  href?: string;
}

const { label, href } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      class="font-mono-custom rounded-md bg-card p-1 text-xs text-foreground lowercase no-underline group-hover/item:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
    >
      {label}
    </a>
  ) : (
    <span class="font-mono-custom rounded-md bg-card p-1 text-xs lowercase group-hover/item:text-foreground">
      {label}
    </span>
  )
}
