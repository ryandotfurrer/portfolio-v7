---
import { socialLinks } from "@/lib/social-links";

const currentYear = new Date().getFullYear();

const sitemapLinks = [
  { label: "Home", href: "/" },
  { label: "Writing", href: "/writing" },
  { label: "Work", href: "/work" },
  { label: "Appearances", href: "/appearances" },
  { label: "Now", href: "/now" },
  { label: "About", href: "/about" },
];
---

<footer class="border-t border-border pt-8 pb-6">
  <div class="space-y-8">
    <nav>
      <h2 class="small-heading mb-4 text-rf-accent">Sitemap</h2>
      <ul
        class="grid grid-cols-2 gap-px text-sm md:flex md:flex-wrap md:gap-x-8 md:gap-y-3"
      >
        {
          sitemapLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="no-underline inline-block w-full rounded-sm py-1.5 text-foreground-muted transition-colors hover:text-rf-accent focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <div class="flex items-center justify-between text-sm">
      <p class="text-foreground-muted">&copy; {currentYear} Ryan Furrer</p>
      <ul class="flex gap-4">
        {
          socialLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="no-underline rounded-sm text-foreground-muted transition-colors hover:text-rf-accent focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
              >
                {link.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</footer>
