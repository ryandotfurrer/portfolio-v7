---
import logo from "@/assets/logo.svg";

const navItems = [
  {
    label: "Writing",
    href: "/writing",
  },
  {
    label: "Work",
    href: "/work",
  },
  {
    label: "Appearances",
    href: "/appearances",
  },
];
---

<nav class="mb-16 md:px-2">
  <div class="flex items-center justify-between">
    <a
      href="/"
      aria-label="Go to home page"
      class="rounded-sm transition-all hover:saturate-100 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 md:saturate-70"
      ><img src={logo.src} alt="Ryan Furrer" class="size-8" /></a
    >
    <ul class="flex gap-4 text-sm">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              aria-label={`Go to ${item.label.toLowerCase()} page`}
              class="text-color-hover rounded-sm font-medium focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2"
            >
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
