---
import { cn } from "@/lib/utils";

interface Props {
  href?: string;
  variant?: "default" | "square";
  class?: string;
}

const { href, variant = "default", class: className } = Astro.props;

const baseClasses =
  "block rounded-lg border bg-card p-2 transition-shadow  hover:no-underline hover:shadow-sm";
const variantClasses =
  variant === "square" ? "aspect-square squircle rounded-4xl p-4" : "";
const classes = cn(baseClasses, variantClasses, className);
---

{
  href ? (
    <a href={href} target="_blank" rel="noopener noreferrer" class={classes}>
      <slot />
    </a>
  ) : (
    <div class={classes}>
      <slot />
    </div>
  )
}
