---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import Footer from "@/components/Footer.astro";
import Head from "@/components/Head.astro";
import Navbar from "@/components/Navbar.astro";
import { cn } from "@/lib/utils";
import "@/styles/global.css";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noNavbar?: boolean;
  noFooter?: boolean;
  maxWidth?: "sm" | "lg";
}

const {
  title = "Ryan Furrer — Frontend Engineer and Designer",
  description = "Frontend engineer focused on crafting accessible, fast, and delightful user experiences.",
  ogImage,
  noNavbar = false,
  noFooter = false,
  maxWidth = "lg",
} = Astro.props;

const ogUrl = new URL(Astro.url.pathname, Astro.site).toString();
---

<html lang="en">
  <head>
    <Head title={title} description={description} ogImage={ogImage} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    {/* Open Graph meta tags */}
    <meta property="og:title" content={title} />
    {description && <meta property="og:description" content={description} />}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={ogUrl} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    {/* Twitter Card meta tags */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    {description && <meta name="twitter:description" content={description} />}
    {ogImage && <meta name="twitter:image" content={ogImage} />}
  </head>
  <body
    class="mx-auto max-w-[70rem] bg-background px-4 py-8 text-foreground-muted antialiased"
  >
    <div class="lg:grid lg:grid-cols-[12rem_1fr_12rem] lg:gap-x-8">
      <!-- Navbar: center column, row 1 — above the side gutters -->
      {!noNavbar && (
        <div
          class={cn(
            "lg:col-start-2",
            maxWidth === "sm"
              ? "max-w-sm mx-auto lg:max-w-none lg:mx-0"
              : "max-w-2xl mx-auto lg:max-w-none lg:mx-0",
          )}
        >
          <Navbar />
        </div>
      )}

      <!-- Left gutter: row 2, starts level with content (below Navbar) -->
      <aside class="hidden lg:block lg:col-start-1 lg:row-start-2">
        <slot name="left" />
      </aside>

      <!-- Center: row 2, same width on every page -->
      <div
        class={cn(
          "space-y-16 min-w-0 lg:col-start-2 lg:row-start-2",
          maxWidth === "sm"
            ? "max-w-sm mx-auto lg:max-w-none lg:mx-0"
            : "max-w-2xl mx-auto lg:max-w-none lg:mx-0",
        )}
      >
        <slot />
        {!noFooter && <Footer />}
      </div>

      <!-- Right gutter: row 2, starts level with content (below Navbar) -->
      <aside class="hidden lg:block lg:col-start-3 lg:row-start-2">
        <slot name="right" />
      </aside>
    </div>
    <Analytics />
    <SpeedInsights />
    <script>
      import "@/scripts/dir-hover";
    </script>
  </body>
</html>
